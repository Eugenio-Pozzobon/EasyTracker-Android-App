<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <!--<item name="colorPrimaryVariant">@color/red_button</item>-->
        <!--<item name="colorOnPrimary">@color/red_button</item>-->

        <!-- Secondary brand color. -->

        <!--<item name="colorSecondary">@color/red_button</item>-->
        <!--<item name="colorSecondaryVariant">@color/yellow</item>-->
        <!--<item name="colorOnSecondary">@color/black</item> -->

        <!--<item name="colorButtonNormal">@color/red_button</item>-->
        <!--<item name="android:buttonTint">@color/red_button</item>-->

        <!--Status bar color. -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!--        Alert Dialog styles-->
        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>

        <!--        Snackbar styles-->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>
        <item name="snackbarTextViewStyle">@style/Widget.App.SnackbarTextViewStyle</item>

    </style>

    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.Launcher">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>



    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!--        check https://stackoverflow.com/questions/2422562/how-to-change-theme-for-alertdialog-->
        <!-- Used for the buttons -->
        <item name="android:buttonBarButtonStyle">@style/MyBorderlessButton</item>
        <item name="colorAccent">@color/white</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">#88000000</item>
    </style>

</resources>